# Hugging Face Token (required for TTS model)
HF_TOKEN=your_token_here

# Verda API Credentials (required for GPU deployments)
VERDA_CLIENT_ID=your_client_id_here
VERDA_CLIENT_SECRET=your_client_secret_here

# API Key for Authentication (required for production)
# Generate with: python api_key_manager.py master
# Format: vf_live_xxxxx or vf_test_xxxxx
API_KEY=vf_live_your_api_key_here

# Server Configuration
TTS_PORT=8000
TTS_HOST=0.0.0.0

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=*

# Optional: Custom model cache directory
# HF_HOME=/custom/cache/path
